BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 40

        Button:
            text: 'Step'
            on_release: board_widget.iterate_once()

        Button:
            text: 'Play'
            id: play_pause_button
            on_release: app.play_pause()

        Button:
            text: 'Settings'
            on_release: app.open_settings_menu()

    BoardWidget:
        id: board_widget

<SettingsMenu>:
    title: 'Game Settings'

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            Slider:
                id: row
                min: 1
                max: 50
                step: 1

            Label:
                text: f'Rows: {row.value}'

            Slider:
                id: col
                min: 1
                max: 50
                step: 1

            Label:
                text: f'Columns: {col.value}'

            Button:
                text: 'Resize Board'
                on_release: app.board_widget.resize(row.value, col.value)

        BoxLayout:
            orientation: 'horizontal'

            Slider:
                id: speed
                min: 0.1
                max: 30

            Label:
                text: f'{speed.value:.1f} fps'

            Button:
                text: 'Set Simulation Speed'
                on_release: app.sim_speed = speed.value

        Button:
            text: 'Close Settings'
            on_release: root.dismiss()
