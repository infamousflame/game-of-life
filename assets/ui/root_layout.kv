BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 40

        Button:
            text: 'Step'
            on_release: app.iterate_once()

        Slider:
            id: row_slider
            min: 1
            max: 30
            step: 1

        Label:
            text: f'Rows: {row_slider.value}'

        Slider:
            id: col_slider
            min: 1
            max: 30
            step: 1

        Label:
            text: f'Columns: {col_slider.value}'

        Button:
            text: 'Resize'
            on_release: app.resize_board()
